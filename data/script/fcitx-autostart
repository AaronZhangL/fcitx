#!/bin/sh

function run_autostart() {
# avoid conflict with existing autostart
sleep 8

# Test whether fcitx is running correctly with dbus...
fcitx-remote > /dev/null 2>&1

if [ $? = "1" ]; then
    echo "Fcitx seems is not running"
    fcitx
else
    echo "Fcitx is running correctly."
fi

}

run_autostart &
